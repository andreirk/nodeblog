<div class="ui main container segment">
    <div class="ui huge header">
        Edit <%= blog.title %>
    </div>
    <form class='ui form' action="/blogs/<%= blog._id  %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input typ="text" name="blog[title]" value='<%= blog.title %>'></input>
        </div>
        <div class="field">
            <label>Image</label>
            <input typ="text" name="blog[image]" value='<%= blog.image %>'></input>
        </div>
        <div class="field">
            <label>Blog content </label>
            <textarea name='blog[body]'>value='<%= blog.body %>'></textarea>
        </div>
           
            <input class='ui violet basic big button' type='submit'></input>
      
    </form>
</div>

